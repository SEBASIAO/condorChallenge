<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.condorchallenge.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <argument
            android:name="teamsList"
            app:argType="com.example.condorchallenge.repo.model.TeamResponse" />
    </fragment>


    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.condorchallenge.ui.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/detail_fragment" >
        <argument
            android:name="team"
            app:argType="com.example.condorchallenge.repo.model.Team" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.condorchallenge.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>